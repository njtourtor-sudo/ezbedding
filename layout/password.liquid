{% layout 'password' %}

<section class="password-page" style="text-align:center; padding:60px 15px;">
  <h1>{{ 'general.password_page.opening_soon' | t | default: 'Opening soon' }}</h1>
  <p style="margin-bottom: 30px;">
    {{ 'general.password_page.subheading' | t | default: 'Be the first to know when we launch.' }}
  </p>

  {%- form 'customer', id: 'PasswordNewsletter', class: 'newsletter-form' -%}
    <div style="margin-bottom: 20px;">
      <input
        type="email"
        name="contact[email]"
        placeholder="{{ 'newsletter.placeholder' | t | default: 'Email' }}"
        style="padding:10px 14px; max-width:260px; width:100%;"
      >
    </div>
    <button type="submit" style="padding:10px 30px;">
      {{ 'newsletter.button_label' | t | default: 'Notify me' }}
    </button>
  {%- endform -%}

  <div style="margin-top:40px;">
    {%- form 'storefront_password', autocomplete: 'off' -%}
      {%- if form.errors -%}
        <p style="color:red; margin-bottom:10px;">
          {{ form.errors | default_errors }}
        </p>
      {%- endif -%}
      <div style="margin-bottom: 10px;">
        <input
          type="password"
          name="password"
          id="Password"
          placeholder="{{ 'general.password_page.input' | t | default: 'Enter password' }}"
          style="padding:10px 14px; max-width:260px; width:100%;"
        >
      </div>
      <button type="submit" style="padding:10px 30px;">
        {{ 'general.password_page.submit' | t | default: 'Enter' }}
      </button>
    {%- endform -%}
  </div>
</section>